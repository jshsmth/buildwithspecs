<style>
	.hero {
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: calc(var(--space-32) + 40px) 0;
		background: radial-gradient(ellipse at center, #E5D4ED 0%, #D4C4DD 100%);
		text-align: center;
		position: relative;
		overflow: hidden;
		border-bottom: var(--border-width) solid var(--color-border);
	}

	/* Decorative Background Shapes */
	.hero-decoration {
		position: absolute;
		pointer-events: none;
		z-index: 0;
		opacity: 1;
	}

	.deco-top-left {
		width: 400px;
		height: 400px;
		top: -50px;
		left: -100px;
	}

	.deco-top-right {
		width: 450px;
		height: 450px;
		top: -80px;
		right: -120px;
	}

	.deco-bottom-left {
		width: 380px;
		height: 380px;
		bottom: -100px;
		left: -80px;
	}

	.deco-bottom-right {
		width: 420px;
		height: 420px;
		bottom: -120px;
		right: -100px;
	}

	.container {
		position: relative;
		z-index: 1;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: calc(var(--space-20) + 60px);
		align-items: center;
	}

	.hero-content {
		text-align: left;
	}

	.hero-visual {
		display: flex;
		flex-direction: column;
		gap: var(--space-12);
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-2) var(--space-4);
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: 100px;
		font-size: var(--text-sm);
		font-weight: 700;
		margin-bottom: var(--space-8);
		box-shadow: var(--shadow-brutal-sm);
		animation: fadeIn 0.6s ease-out both;
	}

	.hero-badge svg {
		color: var(--color-success);
	}

	.hero-title {
		font-size: clamp(1.5rem, 3.5vw, 2rem);
		line-height: 1.2;
		margin-bottom: var(--space-4);
		font-weight: 700;
		letter-spacing: -0.01em;
		color: var(--color-gray-800);
		animation: fadeInUp 0.6s ease-out 0.15s both;
	}

	.highlight-text {
		display: block;
		font-size: clamp(3.5rem, 8vw, 5.5rem);
		font-weight: 900;
		line-height: 1;
		letter-spacing: -0.04em;
		color: var(--color-gray-900);
		margin-top: var(--space-2);
		margin-bottom: var(--space-10);
		animation: fadeInUp 0.6s ease-out 0.3s both;
		position: relative;
	}

	.ghost-container {
		position: absolute;
		top: -40px;
		right: -20px;
		display: inline-block;
		animation: ghostFloat 3s ease-in-out infinite, ghostAppear 0.8s ease-out 1s both;
	}

	.ghost-icon {
		color: rgba(255, 255, 255, 0.95);
		filter: drop-shadow(0 4px 12px rgba(124, 58, 237, 0.4));
		transform-origin: center bottom;
	}

	.hero-subtitle {
		font-size: var(--text-xl);
		line-height: 1.7;
		color: var(--color-text-secondary);
		margin-bottom: var(--space-12);
		max-width: 600px;
		animation: fadeInUp 0.6s ease-out 0.45s both;
	}

	/* Workflow Card */
	.workflow-card {
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: 16px;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12), var(--shadow-brutal-lg);
		padding: var(--space-8);
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
		animation: slideInRight 0.8s ease-out 0.6s both;
	}

	.workflow-step {
		display: flex;
		align-items: flex-start;
		gap: var(--space-3);
	}

	.step-icon {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		border: var(--border-width) solid var(--color-border);
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.step-icon svg {
		display: block;
	}

	.step-icon.requirements {
		background: var(--color-pastel-pink);
		color: #D91656;
	}

	.step-icon.design {
		background: var(--color-pastel-blue);
		color: #2B5F9E;
	}

	.step-icon.tasks {
		background: var(--color-pastel-yellow);
		color: #D4A017;
	}

	.step-icon.build {
		background: var(--color-pastel-green);
		color: #2D8B3E;
	}

	.step-info {
		flex: 1;
		padding-top: var(--space-2);
	}

	.step-title {
		font-size: var(--text-xl);
		font-weight: 900;
		color: var(--color-gray-900);
		line-height: 1.2;
		margin-bottom: var(--space-1);
	}

	.step-desc {
		font-size: var(--text-base);
		color: var(--color-text-secondary);
		font-weight: 500;
		line-height: 1.5;
	}

	/* Mini Stats */
	.stats-mini {
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
	}

	.mini-stat {
		background: rgba(255, 255, 255, 0.7);
		backdrop-filter: blur(8px);
		border: var(--border-width) solid var(--color-border);
		border-radius: 12px;
		padding: 20px var(--space-4);
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--color-gray-700);
		box-shadow: var(--shadow-brutal-sm);
		animation: fadeIn 0.6s ease-out both;
	}

	.mini-stat:nth-child(1) {
		animation-delay: 0.9s;
	}

	.mini-stat:nth-child(2) {
		animation-delay: 1.05s;
	}

	.mini-stat:nth-child(3) {
		animation-delay: 1.2s;
	}

	.mini-value {
		font-weight: 900;
		color: var(--color-gray-900);
		font-size: var(--text-lg);
	}

	.hero-cta {
		display: flex;
		gap: var(--space-4);
		flex-wrap: wrap;
		margin-bottom: var(--space-8);
		animation: fadeInUp 0.6s ease-out 0.6s both;
	}

	.hero-note {
		display: flex;
		align-items: center;
		gap: var(--space-2);
		font-size: var(--text-sm);
		color: var(--color-text-secondary);
		animation: fadeIn 0.6s ease-out 0.75s both;
	}

	.hero-note svg {
		color: var(--color-primary);
		flex-shrink: 0;
	}

	/* Responsive */
	@media (max-width: 968px) {
		.hero-grid {
			grid-template-columns: 1fr;
			gap: var(--space-12);
		}

		.hero-content {
			text-align: center;
		}

		.hero-cta {
			justify-content: center;
		}

		.hero-note {
			justify-content: center;
		}

		.workflow-card {
			padding: var(--space-6);
		}

		.step-icon {
			width: 40px;
			height: 40px;
			font-size: var(--text-lg);
		}
	}

	@media (max-width: 640px) {
		.hero-cta {
			flex-direction: column;
		}
	}

	/* Animations */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideInRight {
		from {
			opacity: 0;
			transform: translateX(50px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes ghostFloat {
		0%, 100% {
			transform: translateY(0px) rotate(-5deg);
		}
		50% {
			transform: translateY(-15px) rotate(5deg);
		}
	}

	@keyframes ghostAppear {
		0% {
			opacity: 0;
			transform: translateY(20px) scale(0.5);
		}
		60% {
			transform: translateY(-10px) scale(1.1);
		}
		100% {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}
</style>
