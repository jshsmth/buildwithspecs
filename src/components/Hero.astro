								<path d="M13.4602 10.2797L9.89016 9.92969L7.66016 12.5797C7.77016 12.6097 8.73016 12.7197 9.88016 13.8697C10.9002 14.8897 11.0902 15.8197 11.1402 15.9997L13.8002 13.7297L13.4602 10.2697V10.2797Z"/>
							</svg>
						</div>
						<div class="step-info">
							<div class="step-title">Design</div>
							<div class="step-desc">Plan architecture</div>
						</div>
					</div>

					<div class="workflow-step">
						<div class="step-icon tasks">
							<svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path opacity="0.4" d="M15 2H2V22H22V11.98" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="square"/>
								<path d="M9 11.0002L11.67 13.8802L21 5.24023" stroke="currentColor" stroke-width="1.5" stroke-linecap="square"/>
							</svg>
						</div>
						<div class="step-info">
							<div class="step-title">Tasks</div>
							<div class="step-desc">Break down work</div>
						</div>
					</div>

					<div class="workflow-step">
						<div class="step-icon build">
							<svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M18.3844 5.88828L13.668 1.17188L4.50387 10.336L9.22027 15.0524L18.3844 5.88828Z"/>
								<path fill-rule="evenodd" clip-rule="evenodd" d="M7.17969 6.93934L12.6804 12.44L11.6197 13.5007L6.11903 8L7.17969 6.93934Z"/>
								<path fill-rule="evenodd" clip-rule="evenodd" d="M11.3281 2.77918L16.8288 8.27985L15.7681 9.34051L10.2675 3.83984L11.3281 2.77918Z"/>
								<path fill-rule="evenodd" clip-rule="evenodd" d="M1.25 21.25H14.51V22.75H1.25V21.25Z"/>
								<path d="M3 20.9999L4.38 18.6699H11.4L12.77 20.9999"/>
								<path d="M12.4102 12.5899L21.5901 18.0699L15.8302 9.16992"/>
							</svg>
						</div>
						<div class="step-info">
							<div class="step-title">Build</div>
							<div class="step-desc">AI implements it</div>
						</div>
					</div>
				</div>

				<div class="stats-mini">
					<div class="mini-stat">
						<span class="mini-value">10x</span> faster planning
					</div>
					<div class="mini-stat">
						<span class="mini-value">85%</span> fewer rewrites
					</div>
					<div class="mini-stat">
						<span class="mini-value">100%</span> team aligned
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--space-32) 0;
		background: var(--color-pastel-purple);
		text-align: center;
		position: relative;
		overflow: hidden;
		border-bottom: var(--border-width) solid var(--color-border);
	}

	.container {
		position: relative;
		z-index: 1;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--space-20);
		align-items: center;
	}

	.hero-content {
		text-align: left;
	}

	.hero-visual {
		display: flex;
		flex-direction: column;
		gap: var(--space-8);
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-2) var(--space-4);
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: 100px;
		font-size: var(--text-sm);
		font-weight: 700;
		margin-bottom: var(--space-8);
		box-shadow: var(--shadow-brutal-sm);
	}

	.hero-badge svg {
		color: var(--color-success);
	}

	.hero-title {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
		line-height: 1.3;
		margin-bottom: var(--space-3);
		font-weight: 700;
		letter-spacing: -0.01em;
		color: var(--color-gray-700);
	}

	.highlight-text {
		display: block;
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		letter-spacing: -0.03em;
		color: var(--color-gray-900);
		margin-top: var(--space-4);
		margin-bottom: var(--space-8);
	}

	.hero-subtitle {
		font-size: var(--text-xl);
		line-height: 1.7;
		color: var(--color-text-secondary);
		margin-bottom: var(--space-12);
		max-width: 600px;
	}

	/* Workflow Card */
	.workflow-card {
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: var(--border-radius);
		box-shadow: var(--shadow-brutal-lg);
		padding: var(--space-8);
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
	}

	.workflow-step {
		display: flex;
		align-items: flex-start;
		gap: var(--space-3);
	}

	.step-icon {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		border: var(--border-width) solid var(--color-border);
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.step-icon svg {
		display: block;
	}

	.step-icon.requirements {
		background: var(--color-pastel-pink);
		color: #D91656;
	}

	.step-icon.design {
		background: var(--color-pastel-blue);
		color: #2B5F9E;
	}

	.step-icon.tasks {
		background: var(--color-pastel-yellow);
		color: #D4A017;
	}

	.step-icon.build {
		background: var(--color-pastel-green);
		color: #2D8B3E;
	}

	.step-info {
		flex: 1;
		padding-top: var(--space-2);
	}

	.step-title {
		font-size: var(--text-xl);
		font-weight: 900;
		color: var(--color-gray-900);
		line-height: 1.2;
		margin-bottom: var(--space-1);
	}

	.step-desc {
		font-size: var(--text-base);
		color: var(--color-text-secondary);
		font-weight: 500;
		line-height: 1.5;
	}

	/* Mini Stats */
	.stats-mini {
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
	}

	.mini-stat {
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: var(--border-radius);
		padding: var(--space-3) var(--space-4);
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--color-gray-700);
		box-shadow: var(--shadow-brutal-sm);
	}

	.mini-value {
		font-weight: 900;
		color: var(--color-gray-900);
		font-size: var(--text-lg);
	}

	.hero-cta {
		display: flex;
		gap: var(--space-4);
		flex-wrap: wrap;
		margin-bottom: var(--space-8);
	}

	.hero-note {
		display: flex;
		align-items: center;
		gap: var(--space-2);
		font-size: var(--text-sm);
		color: var(--color-text-secondary);
	}

	.hero-note svg {
		color: var(--color-primary);
		flex-shrink: 0;
	}

	/* Responsive */
	@media (max-width: 968px) {
		.hero-grid {
			grid-template-columns: 1fr;
			gap: var(--space-12);
		}

		.hero-content {
			text-align: center;
		}

		.hero-cta {
			justify-content: center;
		}

		.hero-note {
			justify-content: center;
		}

		.workflow-card {
			padding: var(--space-6);
		}

		.step-icon {
			width: 40px;
			height: 40px;
			font-size: var(--text-lg);
		}
	}

	@media (max-width: 640px) {
		.hero-cta {
			flex-direction: column;
		}
	}
</style>
