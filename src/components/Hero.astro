<style>
	.hero {
		min-height: 85vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--space-24) 0;
		background: var(--color-pastel-purple);
		text-align: center;
		position: relative;
		overflow: hidden;
		border-bottom: var(--border-width) solid var(--color-border);
	}

	/* Decorative Shapes */
	.hero-decoration {
		position: absolute;
		pointer-events: none;
		z-index: 0;
	}

	.shape-circle {
		width: 160px;
		height: 160px;
		border-radius: 50%;
		border: var(--border-width) solid var(--color-border);
		background: var(--color-white);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.shape-circle svg {
		display: block;
	}

	/* Top Left - Shapes (Pink) */
	.shape-1 {
		top: 8%;
		left: 3%;
	}

	.shape-1 .shape-circle svg {
		color: var(--color-pastel-pink);
	}

	/* Top Right - Code (Blue) */
	.shape-2 {
		top: 5%;
		right: 5%;
	}

	.shape-2 .shape-circle svg {
		color: var(--color-pastel-blue);
	}

	/* Bottom Right - Hierarchy (Green) */
	.shape-4 {
		bottom: 5%;
		right: 10%;
	}

	.shape-4 .shape-circle svg {
		color: var(--color-pastel-green);
	}

	.container {
		position: relative;
		z-index: 1;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--space-16);
		align-items: center;
	}

	.hero-content {
		text-align: left;
	}

	.hero-visual {
		display: flex;
		flex-direction: column;
		gap: var(--space-6);
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-2) var(--space-4);
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: 100px;
		font-size: var(--text-sm);
		font-weight: 700;
		margin-bottom: var(--space-8);
		box-shadow: var(--shadow-brutal-sm);
	}

	.hero-badge svg {
		color: var(--color-success);
	}

	.hero-title {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
		line-height: 1.3;
		margin-bottom: var(--space-3);
		font-weight: 700;
		letter-spacing: -0.01em;
		color: var(--color-gray-700);
	}

	.highlight-text {
		display: block;
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		letter-spacing: -0.03em;
		color: var(--color-primary);
		margin-top: var(--space-4);
		margin-bottom: var(--space-8);
	}

	.hero-subtitle {
		font-size: var(--text-xl);
		line-height: 1.7;
		color: var(--color-text-secondary);
		margin-bottom: var(--space-10);
		max-width: 600px;
	}

	/* Workflow Card */
	.workflow-card {
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: var(--border-radius);
		box-shadow: var(--shadow-brutal-lg);
		padding: var(--space-8);
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
	}

	.workflow-step {
		display: flex;
		align-items: flex-start;
		gap: var(--space-3);
	}

	.step-icon {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		border: var(--border-width) solid var(--color-border);
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.step-icon svg {
		display: block;
	}

	.step-icon.requirements {
		background: var(--color-pastel-pink);
		color: var(--color-gray-900);
	}

	.step-icon.design {
		background: var(--color-pastel-blue);
		color: var(--color-gray-900);
	}

	.step-icon.tasks {
		background: var(--color-pastel-yellow);
		color: var(--color-gray-900);
	}

	.step-icon.build {
		background: var(--color-pastel-green);
		color: var(--color-gray-900);
	}

	.step-info {
		flex: 1;
		padding-top: var(--space-2);
	}

	.step-title {
		font-size: var(--text-xl);
		font-weight: 900;
		color: var(--color-gray-900);
		line-height: 1.2;
		margin-bottom: var(--space-1);
	}

	.step-desc {
		font-size: var(--text-base);
		color: var(--color-text-secondary);
		font-weight: 500;
		line-height: 1.5;
	}

	/* Mini Stats */
	.stats-mini {
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
	}

	.mini-stat {
		background: var(--color-white);
		border: var(--border-width) solid var(--color-border);
		border-radius: var(--border-radius);
		padding: var(--space-3) var(--space-4);
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--color-gray-700);
		box-shadow: var(--shadow-brutal-sm);
	}

	.mini-value {
		font-weight: 900;
		color: var(--color-gray-900);
		font-size: var(--text-lg);
	}

	.hero-cta {
		display: flex;
		gap: var(--space-4);
		flex-wrap: wrap;
		margin-bottom: var(--space-6);
	}

	.hero-note {
		display: flex;
		align-items: center;
		gap: var(--space-2);
		font-size: var(--text-sm);
		color: var(--color-text-secondary);
	}

	.hero-note svg {
		color: var(--color-primary);
		flex-shrink: 0;
	}

	/* Responsive */
	@media (max-width: 968px) {
		.hero-grid {
			grid-template-columns: 1fr;
			gap: var(--space-12);
		}

		.hero-content {
			text-align: center;
		}

		.hero-cta {
			justify-content: center;
		}

		.hero-note {
			justify-content: center;
		}

		.workflow-card {
			padding: var(--space-6);
		}

		.step-icon {
			width: 40px;
			height: 40px;
			font-size: var(--text-lg);
		}

		.shape-circle {
			width: 120px;
			height: 120px;
		}

		.shape-circle svg {
			width: 45px !important;
			height: 45px !important;
		}

		.shape-1 {
			top: 8%;
			left: 3%;
		}

		.shape-2 {
			top: 12%;
			right: 5%;
		}

		.shape-4 {
			bottom: 12%;
			right: 4%;
		}
	}

	@media (max-width: 640px) {
		.hero-cta {
			flex-direction: column;
		}

		.shape-circle {
			width: 90px;
			height: 90px;
		}

		.shape-circle svg {
			width: 35px !important;
			height: 35px !important;
		}

		.shape-1 {
			top: 5%;
			left: 2%;
		}

		.shape-2 {
			top: 8%;
			right: 2%;
		}

		.shape-4 {
			bottom: 8%;
			right: 2%;
		}
	}
</style>
