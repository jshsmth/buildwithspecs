---
interface Props {
	href?: string;
	variant?: 'primary' | 'secondary' | 'outline';
	size?: 'sm' | 'md' | 'lg';
	class?: string;
}

const { href, variant = 'primary', size = 'md', class: className = '' } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element
	href={href}
	class:list={['btn', `btn-${variant}`, `btn-${size}`, className]}
	{...href && { role: 'button' }}
>
	<slot />
</Element>

<style>
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-2);
		font-weight: 600;
		border-radius: var(--border-radius);
		border: 2px solid transparent;
		cursor: pointer;
		transition: all var(--transition-base);
		text-decoration: none;
		font-family: var(--font-sans);
		white-space: nowrap;
	}

	.btn:focus-visible {
		outline: 3px solid var(--color-accent-600);
		outline-offset: 2px;
	}

	/* Variants */
	.btn-primary {
		background: var(--color-claude-600);
		color: white;
		box-shadow: 0 4px 14px rgba(234, 88, 12, 0.3);
		border-color: transparent;
	}

	.btn-primary:hover {
		background: var(--color-claude-700);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(234, 88, 12, 0.4);
	}

	.btn-primary:active {
		transform: translateY(0);
		box-shadow: 0 2px 8px rgba(234, 88, 12, 0.3);
	}

	.btn-secondary {
		background: var(--color-white);
		color: var(--color-indigo-700);
		border-color: var(--color-border-strong);
		box-shadow: var(--shadow-sm);
	}

	.btn-secondary:hover {
		background: var(--color-gray-50);
		border-color: var(--color-claude-500);
		box-shadow: var(--shadow-md);
	}

	.btn-outline {
		background: transparent;
		color: var(--color-claude-600);
		border-color: var(--color-claude-500);
	}

	.btn-outline:hover {
		background: var(--color-claude-50);
		border-color: var(--color-claude-600);
		color: var(--color-claude-700);
	}

	/* Sizes */
	.btn-sm {
		padding: var(--space-2) var(--space-4);
		font-size: var(--text-sm);
	}

	.btn-md {
		padding: var(--space-3) var(--space-6);
		font-size: var(--text-base);
	}

	.btn-lg {
		padding: var(--space-4) var(--space-8);
		font-size: var(--text-lg);
	}

	/* Touch targets for mobile */
	@media (max-width: 768px) {
		.btn {
			min-height: 44px;
			min-width: 44px;
		}
	}
</style>
