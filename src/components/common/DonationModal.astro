---
import BuyMeCoffeeButton from './BuyMeCoffeeButton.astro';
import Button from './Button.astro';
---

<div id="donation-modal" class="modal-backdrop" aria-hidden="true">
	<div class="modal-content" role="dialog" aria-labelledby="modal-title" aria-describedby="modal-description">
		<button class="modal-close" aria-label="Close modal">
			<svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<line x1="18" y1="6" x2="6" y2="18"></line>
				<line x1="6" y1="6" x2="18" y2="18"></line>
			</svg>
		</button>

		<div class="modal-body">
			<div class="modal-icon icon-circle icon-circle--lg">
				<svg width="48" height="48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M22 11.08V12a10 10 0 0 0 5.5 8.94M22 11.08A10 10 0 0 0 12 12v0M22 11.08V3M12 12a10 10 0 0 0 10 10v0"></path>
					<circle cx="12" cy="12" r="2"></circle>
					<path d="M12 12v6"></path>
				</svg>
			</div>

			<h2 id="modal-title">Download Started!</h2>
			<p id="modal-description">
				Your spec-architect.md file is downloading. This free tool helps you build better software with AI.
			</p>

			<div class="modal-divider"></div>

			<div class="support-section">
				<p class="support-message">
					If you find this useful, consider supporting the project
				</p>
				<BuyMeCoffeeButton />
			</div>

			<Button variant="secondary" size="lg" class="continue-btn">Continue browsing</Button>
		</div>
	</div>
</div>

<script>
	import { initDownloadModal } from '../../scripts/modal';

	function init() {
		initDownloadModal('donation-modal', 'a[download*=".md"]');
	}

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
</script>

<style>
	.modal-backdrop {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.5);
		backdrop-filter: blur(4px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--space-4);
		z-index: var(--z-modal-backdrop);
		opacity: 0;
		visibility: hidden;
		transition: all var(--transition-base);
	}

	.modal-backdrop.active {
		opacity: 1;
		visibility: visible;
	}

	.modal-content {
		background: var(--color-white);
		border-radius: var(--border-radius);
		border: var(--border-width) solid var(--color-border);
		box-shadow: var(--shadow-brutal-lg);
		max-width: 500px;
		width: 100%;
		position: relative;
		transform: scale(0.9) translateY(20px);
		transition: transform var(--transition-base);
		z-index: var(--z-modal);
	}

	.modal-backdrop.active .modal-content {
		transform: scale(1) translateY(0);
	}

	.modal-close {
		position: absolute;
		top: var(--space-4);
		right: var(--space-4);
		background: transparent;
		border: none;
		cursor: pointer;
		color: var(--color-gray-600);
		transition: color var(--transition-fast);
		padding: var(--space-2);
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
	}

	.modal-close:hover {
		color: var(--color-gray-900);
		background: var(--color-gray-100);
	}

	.modal-body {
		padding: var(--space-10) var(--space-8) var(--space-8);
		text-align: center;
	}

	.modal-icon {
		margin: 0 auto var(--space-6);
		background: var(--color-pastel-green);
	}

	.modal-body h2 {
		font-size: var(--text-3xl);
		margin-bottom: var(--space-3);
		color: var(--color-gray-900);
	}

	.modal-body p {
		font-size: var(--text-lg);
		color: var(--color-text-secondary);
		margin-bottom: var(--space-6);
	}

	.modal-divider {
		height: 2px;
		background: var(--color-gray-200);
		margin: var(--space-6) 0;
	}

	.support-section {
		margin: var(--space-6) 0;
	}

	.support-message {
		font-size: var(--text-base);
		color: var(--color-text-secondary);
		margin-bottom: var(--space-4);
	}

	.continue-btn {
		width: 100%;
		margin-top: var(--space-6);
		padding: var(--space-4) var(--space-6);
	}

	@media (max-width: 640px) {
		.modal-body {
			padding: var(--space-8) var(--space-6) var(--space-6);
		}

		.modal-body h2 {
			font-size: var(--text-2xl);
		}

		.modal-body p {
			font-size: var(--text-base);
		}
	}
</style>
