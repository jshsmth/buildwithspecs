		</linearGradient>

		<pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
			<circle cx="20" cy="20" r="2" fill="#171717" opacity="0.05"/>
		</pattern>
	</defs>

	<rect width="1200" height="630" fill="url(#bgGradient)"/>
	<rect width="1200" height="630" fill="url(#dots)"/>

	<rect x="40" y="40" width="1120" height="550" fill="white" stroke="#171717" stroke-width="6" rx="32"/>
	<rect x="48" y="48" width="1112" height="542" fill="none" stroke="#171717" stroke-width="2" rx="28"/>

