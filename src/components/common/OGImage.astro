	<g>
		<text
			x="450"
			y="240"
			font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
			font-size="68"
			font-weight="700"
			fill="#171717"
		>Spec-Driven</text>
		<text
			x="450"
			y="310"
			font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
			font-size="68"
			font-weight="700"
			fill="#171717"
		>Development</text>

		<text
			x="450"
			y="365"
			font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
			font-size="36"
			font-weight="500"
			fill="#525252"
